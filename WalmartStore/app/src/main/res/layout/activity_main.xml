<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- this is a image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="204dp"
        android:layout_height="62dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/wallmart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <!-- Sign in to your account -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to your account"
        android:gravity="left"
        android:textSize="26sp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <!-- this is an email address text -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Email address(required)"
        android:gravity="left"
        />

    <!-- edit text for email -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <!-- this is a password text -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Password(required)"
        android:gravity="left"
        />

    <!-- edit text for password -->
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <!-- this is a text for forgot password -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Forgot password!"
        android:gravity="right"
        android:autoLink="all"
        android:clickable="true"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp"
        />

    <!-- this is a Sign in button -->
    <Button
        android:id="@+id/SignInBtn"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="0dp"
        android:onClick="setOnSingIn"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />

    <!-- this is a text for Don't have an account -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"

        />

    <!-- this is a button of create a new account -->
    <Button
        android:id="@+id/createAcctBtn"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        android:elevation="0dp"
        android:onClick="onClickNewAccount"
        android:text="Create a new account"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark" />

</LinearLayout>